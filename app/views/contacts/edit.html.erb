<h1 class="text-center text-primary"><%= t('new_contact')%></h1>
<div class="contact_form" id="new_contact_form">
  <%= form_for @contact, url: contacts_path, html: { role: "form", class: "form-horizontal" } do |f| %>
    <div class="form-group">
      <%= f.label :first_name, class: "col-sm-4 control-label" %>
      <div class="col-sm-4">
        <%= f.text_field :first_name, class: "form-control" %>
        <% if @contact.errors[:first_name].any? %>
          <%= @contact.errors[:first_name].join(", ") %>
        <% end %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :last_name, class: "col-sm-4 control-label" %>
      <div class="col-sm-4">
        <%= f.text_field :last_name, class: "form-control" %>
        <% if @contact.errors[:last_name].any? %>
          <%= @contact.errors[:last_name].join(", ") %>
        <% end %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :phone_number, class: "col-sm-4 control-label" %>
      <div class="col-sm-4">
        <%= f.text_field :phone_number, class: "form-control" %>
        <% if @contact.errors[:phone_number].any? %>
          <%= @contact.errors[:phone_number].join(", ") %>
        <% end %>
      </div>
    </div>
    <div class="col-sm-offset-5 col-sm-12">
      <%= f.submit t('submit'), class: "btn btn-default" %>
    </div>
  <% end %>
</div>

