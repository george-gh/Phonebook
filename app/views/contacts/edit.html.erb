<h3 class="text-center text-primary"><%= t('edit_contact')%></h3>
<div class="contact_form" id="new_contact_form">
  <%= form_for @contact, url: contact_path, html: { role: "form", class: "form-horizontal" } do |f| %>
    <div class="form-group">
      <%= f.label :first_name, class: "col-sm-4 control-label" %>
      <div class="col-sm-4">
        <%= f.text_field :first_name, class: "form-control" %>
        <%= render "error_messages", contact: @contact, field: :first_name %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :last_name, class: "col-sm-4 control-label" %>
      <div class="col-sm-4">
        <%= f.text_field :last_name, class: "form-control" %>
        <%= render "error_messages", contact: @contact, field: :first_name %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :phone_number, class: "col-sm-4 control-label" %>
      <div class="col-sm-4">
        <%= f.text_field :phone_number, class: "form-control" %>
        <%= render "error_messages", contact: @contact, field: :first_name %>
      </div>
    </div>
    <div class="col-sm-12">
      <%= f.submit t('submit'), class: "btn btn-default col-sm-offset-5" %>
    </div>
  <% end %>
</div>

