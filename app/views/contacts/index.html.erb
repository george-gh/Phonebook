<h3 class="text-center text-primary"><%= t('contacts') %></h3>
<% unless @contacts.blank? %>
  <table class="table table-hover">
    <thead>
      <tr>
        <th><%= t('first_name')%></th>
        <th><%= t('last_name') %></th>
        <th><%= t('phone_number') %></th>
      </tr>
    </thead>
    <tbody>
      <% @contacts.each do |contact| %>
        <tr>
          <td><%= contact.first_name %></td>
          <td><%= contact.last_name %></td>
          <td><%= contact.phone_number %></td>
          <td><%= link_to t('show'), contact_path(contact) %></td>
          <td><%= link_to t('edit'), edit_contact_path(contact) %></td>
          <td><%= link_to t('destroy'), contact_path(contact), 
				        method: :delete,
                                        class: "alert-destroy" %></td>
				        <!-- # data: { confirm: t('destroy_confirmation') } %></td>-->
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div class="contacts_list_empty">
    <em>t('empty_contact_list')</em>
  </div>
<% end %>
