<h3 class="text-center text-primary"><%= t('new_contact')%></h3>
<%= form_for @contact, url: contacts_path, html: { role: "form", class: "form-horizontal" } do |f| %>
  <div class="form-group">
    <%= f.label t('first_name'), class: "col-sm-4 control-label" %>
    <div class="col-sm-4">
      <%= f.text_field :first_name, class: "form-control" %>
    </div>
    <%= render "error_messages", contact: @contact, field: :first_name %>
  </div>
  <div class="form-group">
    <%= f.label t('last_name'), class: "col-sm-4 control-label" %>
    <div class="col-sm-4">
      <%= f.text_field :last_name, class: "form-control" %>
    </div>
    <%= render "error_messages", contact: @contact, field: :last_name %>
  </div>
  <div class="form-group">
    <%= f.label t('phone_number'), class: "col-sm-4 control-label" %>
    <div class="col-sm-4">
      <%= f.text_field :phone_number, class: "form-control" %>
    </div>
    <%= render "error_messages", contact: @contact, field: :phone_number %>
  </div>
  <div class="col-sm-12">
    <%= f.submit t('submit'), class: "btn btn-default col-sm-offset-5" %>
  </div>
<% end %>
