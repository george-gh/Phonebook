<div id="search_results">
<% unless @contacts.blank? %>
  <h3 class="text-center text-info"><%= t('results') %></h3>
  <table class="table table-hover">
    <thead>
      <tr>
        <td><%= t('first_name')%></td>
        <td><%= t('last_name') %></td>
        <td><%= t('phone_number') %></td>
      </tr>
    </thead>
    <tbody>
      <% @contacts.each do |contact| %>
        <tr>
          <td><%= contact.first_name %></td>
          <td><%= contact.last_name %></td>
          <td><%= contact.phone_number %></td>
          <td><%= link_to t('show'), contact_path(contact) %></td>
          <td><%= link_to t('edit'), edit_contact_path(contact) %></td>
          <td><%= link_to t('destroy'), contact_path(contact),
                                        method: :delete,
                                        data: { confirm: t('destroy_confirmation') } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>  
<% end %>
</div>
